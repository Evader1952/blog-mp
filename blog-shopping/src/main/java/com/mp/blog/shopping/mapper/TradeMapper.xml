            </if>
            <if test="buyWay != null">
                 `buy_way`=#{buyWay},
            </if>
            <if test="bizType != null">
                 `biz_type`=#{bizType},
            </if>
            <if test="type != null">
                 `type`=#{type},
            </if>
            <if test="state != null">
                 `state`=#{state},
            </if>
            <if test="createTime != null">
                 `create_time`=#{createTime},
            </if>
        </set>
        WHERE id=#{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE
        FROM
        <include refid="table"/>
        WHERE id=#{id}
    </delete>
</mapper>
